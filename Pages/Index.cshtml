@{
    ViewData["Title"] = "Home page";
}

<style>
    body {
        background: linear-gradient(to bottom, #ddf5e2,#ddf5f2, #ddf5e2, #ddf5e2, #ddf5e2, #132); /* Gradient from light green to darker green */ /* Calm low green color */
